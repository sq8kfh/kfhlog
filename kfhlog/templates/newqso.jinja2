{% extends "base.jinja2" %}

{% block head %}
    <link rel="stylesheet" type="text/css" href="{{request.static_url('kfhlog:static/chosen.min.css')}}" />
    <script src="{{request.static_url('kfhlog:static/chosen.jquery.min.js')}}"></script>
    <script src="{{request.static_url('kfhlog:static/newqso.js')}}"></script>
{% endblock %}

{% block content %}
<form id="id_qsoaddform">
	<table><tr><td>
		<table>
			<tr><td><label for="call">Call:</label></td><td><input type="text" name="call" maxlength="20" id="call_input" /></td></tr>
			<tr><td><label for="date_on">Date:</label></td><td><input type="date" name="date_on_d" id="date_on_date" /><input type="time" name="date_on_t" id="date_on_time" /><input id="date_on_button" type="button" value="<"/></td></tr>
			<tr><td><label for="rst_sent">RST Send:</label></td><td><input type="text" name="rst_sent" /><input type="text" name="stx_string" id="stx_string_input" /></td></tr>
			<tr><td><label for="rst_rcvd">RST Recv:</label></td><td><input type="text" name="rst_rcvd" /><input type="text" name="srx_string" id="srx_string_input" /></td></tr>
			<tr><td><label for="gridsquare">Locator:</label></td><td><input type="text" name="gridsquare" maxlength="8" pattern="[A-Ra-r]{2}([0-9]{2}([A-Xa-x]{2}([0-9]{2})?)?)?" /><output id="id_loc_info">0.00km, 0.0&deg;</output></td></tr>
			<tr><td><label for="name">Name:</label></td><td><input type="text" name="call" maxlength="20" /></td></tr>
			<tr><td><label for="qth">QTH:</label></td><td><input type="text" name="call" maxlength="20" /></td></tr>
			<tr><td><label for="comment">Remarks:</label></td><td><input type="text" name="call" /></td></tr>
		</table>
		</td><td>
		<table>
            <tr><td><label for="mode">Mode:</label></td><td><select name="mode" data-placeholder="Select" id="mode_select">
                <option value=""></option>
                {% for mode in modes %}
                <option value="{{ mode.id }}">{{ mode.name }}</option>
                {% endfor %}
            </select></td></tr>
			<tr><td><label for="band">Band:</label></td><td><select name="band" data-placeholder="Select." id="band_select">
                <option value=""></option>
                {% for band in bands %}
                <option value="{{ band.id }}">{{ band.name }}</option>
                {% endfor %}
            </select></td></tr>
			<tr><td><label for="freq">Freq:</label></td><td><input type="number" name="freq" id="freq_input" placeholder="MHz" step="0.000001" min="0.000001"/></td></tr>
			<tr><td><label for="dxcc">Country:</label></td><td><select name="dxcc" data-placeholder="Select" id="dxcc_select">
                <option value=""></option>
                {% for dxcc in dxccs %}
                <option value="{{ dxcc.id }}">{{ dxcc.name }} [{{ dxcc.id }}]</option>
                {% endfor %}
            </select></td></tr>
			<tr><td></td><td><output id="id_prefix_info"></output></td></tr>
			<tr><td><label for="state">State:</label></td><td><input type="text" name="state" maxlength="20" /></td></tr>
			<tr><td></td><td><output id="id_state_info" for="state"></output></td></tr>
			<tr><td><label for="ituz">ITU:</label></td><td><input type="number" name="ituz" min="1" max="75" id="ituz_input" /></td></tr>
			<tr><td><label for="cqz">WAZ:</label></td><td><input type="number" name="cqz" min="1" max="40" id="cqz_input" /></td></tr>
			<tr><td><label for="iota">IOTA:</label></td><td><input type="text" name="iota" maxlength="6" pattern="([Aa][Ff]|[Aa][Nn]|[Aa][Ss]|[Ee][Uu]|[Nn][Aa]|[Oo][Cc]|[Ss][Aa])-[0-9]{3}" /></td></tr>
			<tr><td><label for="sota_ref">SOTA:</label></td><td><input type="text" name="sota_ref" maxlength="20" pattern="[A-Za-z0-9]{1,3}/[A-Za-z]{2}-[0-9]{3}" /></td></tr>
			<tr><td></td><td><output id="id_sota_info" for="sota"></output></td></tr>
			<tr><td><label for="qsl_via">QSL via:</label></td><td><input type="text" name="qsl_via" maxlength="20" /></td></tr>
		</table>
	</td></tr></table>
	<input type="button" id="id_updatetimeandadd" value="Time update and add"/><input type="button" id="id_add" value="Add"/>
</form>
<table id="previou_table">
	<thead>
		<tr>
			<th>Date</th>
			<th>Band</th>
			<th>Mode</th>
		</tr>
	</thead>
	<tbody>
	</tbody>
</table>
{% endblock content %}