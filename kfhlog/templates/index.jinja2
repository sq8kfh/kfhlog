{% extends "base.jinja2" %}

{% block content %}
<div class="dashboard">
    <div>
        <table class="stdtable">
            <tr><th colspan="3">Predictions</th></tr>
            <tr><th>Day</th><th>SFI</th><th>Ap</th></tr>
            {% for p in predictions %}
                <tr><td>{{p['date'].day}}</td><td>{{p['sfi']}}</td><td>{{p['Ap']}}</td></tr>
            {% endfor %}
        </table>
    </div>
    <div>
        <table class="stdtable">
            <tr><th colspan="4">Solar</th></tr>
            <tr><th>Day</th><th>SFI</th><th>SN</th><th>X-ray flux</th></tr>
            {% for s in solar %}
                <tr><td>{{s['date'].day}}</td><td>{{s['sfi']}}</td><td>{{s['sn']}}</td><td>{{s['x_ray_flux']}}</td></tr>
            {% endfor %}
        </table>
    </div>
    <div>
        <table class="stdtable">
            <tr><th colspan="10">Geomagnetic</th></tr>
            <tr><th>Day</th><th>Ap</th><th colspan="8">Kp</th></tr>
            {% for g in geomagnetic %}
                <tr><td>{{g['date'].day}}</td><td>{{g['Ap']}}</td><td>{{g['Kp03'] if g['Kp03'] != None else '' }}</td><td>{{g['Kp06'] if g['Kp06'] != None else '' }}</td><td>{{g['Kp09'] if g['Kp09'] != None else '' }}</td><td>{{g['Kp12'] if g['Kp12'] != None else '' }}</td><td>{{g['Kp15'] if g['Kp15'] != None else '' }}</td><td>{{g['Kp18'] if g['Kp18'] != None else '' }}</td><td>{{g['Kp21'] if g['Kp21'] != None else '' }}</td><td>{{g['Kp24'] if g['Kp24'] != None else '' }}</td></tr>
            {% endfor %}
        </table>
    </div>
</div>
{% endblock content %}